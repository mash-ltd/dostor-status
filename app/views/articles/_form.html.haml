= form_for @article, html: { class: "form-horizontal" } do |f|
  %fieldset
    %legend #{params[:action].humanize} article

    .control-group
      = f.label :number, "Article number", class: "control-label"
      .controls
        = f.text_field :number, class: "input-mini"

    .control-group
      = f.label :body, "Body", class: "control-label"
      .controls
        = f.text_area :body, rows: 3, class: "input-xxlarge"

    .control-group
      .controls
        = f.submit "Save", class: "btn"